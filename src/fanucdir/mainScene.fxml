<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>


<BorderPane fx:controller="fanucdir.MainSceneController"
            xmlns:fx="http://javafx.com/fxml" >

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <top>
        <HBox spacing="10">
            <TextField prefWidth="200" fx:id="textToSearch" onAction="#searchProgram"></TextField>
            <Button onAction="#searchProgram">cerca</Button>
        </HBox>
    </top>
    <left>
        <TableView fx:id="programTable">
            <columns>
                <TableColumn fx:id="programNameColumn" text="Programma">
                </TableColumn>
                <TableColumn fx:id="fileNameColumn" text="File">
                </TableColumn>
            </columns>
        </TableView>
    </left>

</BorderPane>